pipeline {
    agent any
	tools {
		nodejs 'nodejs 22.3.0' // jenkins nodejs name
		}
	// npm install -g newman-reporter-allure
	// npm install -g allure-commandline
    parameters {
        string(name: 'collectionfile', defaultValue: 'collection.json', description: 'Enter a value for collection.json')
    }
    stages {
        stage('Run Newman API Tests') {
            steps {
                script {
                    def collectionfile=params.collectionfile
                    sh '''
					npm install newman
					npm install -g newman-reporter-allure
					npm install -g allure-commandline
					newman --version
					newman run ${collectionfile} --insecure -r allure --reporter-allure-export allure-results
					'''
                }
            }
        }

	stage('Publish Allure Report') {
		steps {
			// Publish Allure report as regular artifacts
			allure includeProperties: false, jdk: '', results: [[path: 'allure-results']]
	    }
	}

	stage('Delete reports'){
            steps{
                script {
                sh """
					rm -rf allure-results
                """
                }
            }
        }

    }
}