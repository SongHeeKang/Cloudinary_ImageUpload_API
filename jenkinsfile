pipeline {
    agent any

    environment {
        NODE_VERSION = '22.3.0'
    }

    stages {
        stage('Prepare') {
            steps {
                // 작업 디렉토리 정리
                cleanWs()
                // 소스 코드 체크아웃 (필요한 경우)
                // checkout scm
            }
        }

        stage('Install Node.js and npm') {
            steps {
                // NVM 설치
                sh '''
                    curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.7/install.sh | bash
                    export NVM_DIR="$HOME/.nvm"
                    [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # NVM 스크립트를 로드
                    [ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # NVM bash_completion을 로드
                '''
                // Node.js 설치 및 사용
                sh """
                    export NVM_DIR="$HOME/.nvm"
                    [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # NVM 스크립트를 로드
                    nvm install ${NODE_VERSION}
                    nvm use ${NODE_VERSION}
                    node --version
                    npm --version
                """
            }
        }

        stage('Install Dependencies') {
            steps {
                // Newman 및 Allure 커맨드라인 도구 설치
                sh '''
                    export NVM_DIR="$HOME/.nvm"
                    [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # NVM 스크립트를 로드
                    npm install -g newman
                    npm install -g allure-commandline
                '''
            }
        }

        stage('Run Newman Tests') {
            steps {
                // Newman으로 collection.json 실행 및 결과를 Allure 형식으로 출력
                sh '''
                    export NVM_DIR="$HOME/.nvm"
                    [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # NVM 스크립트를 로드
                    newman run collection.json -r allure --reporter-allure-export allure-results
                '''
            }
        }

        stage('Generate Allure Report') {
            steps {
                // Allure 리포트 생성
                sh '''
                    export NVM_DIR="$HOME/.nvm"
                    [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # NVM 스크립트를 로드
                    allure generate allure-results -o allure-report --clean
                '''
            }
        }
    }

    post {
        always {
            // Allure 리포트 발행
            allure([
                includeProperties: false,
                jdk: '',
                properties: [],
                reportBuildPolicy: 'ALWAYS',
                results: [[path: 'allure-results']]
            ])
        }
    }
}