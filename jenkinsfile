pipeline {
    agent any
	
	tools {
		nodejs 'nodejs 16.0.0'
		}

    stages {
        stage('Run Newman API Tests') {
            steps {
                script {
                    sh '''
	        npm install 16
	        nvm use 16
	        npm install newman
	        newman --version
	        npm install -g newman-reporter-allure
	        rm -rf allure-results
	        newman run collection.json -e environment.json --insecure -r allure --reporter-allure-export allure-results
	    '''
                }
            }
        }
    }
}
