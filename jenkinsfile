pipeline {
    agent any
	
	tools {
		nodejs 'nodejs 16.0.0'

		}

    stages {
        stage('Run Newman API Tests') {
            steps {
                script {
                    sh '''
		cd /usr/local/bin/node-v16.4.2-linux-x64/lib/node_modules/newman/bin
	        npm install newman
	        npm install -g newman-reporter-allure
		npm install -g allure-commandline
		newman --version
		rm -rf /var/jenkins_home/workspace/MultiAPI_master/Workspaces
	        newman run collection.json --insecure -r allure --reporter-allure-export allure-results
		allure generate --clean allure-results
	    '''
                }
            }
        }
    }
}
